{
  "name": "twc-2025",
  "version": "0.0.0",
  "description": "TWC 2025 NodeCG bundle",
  "homepage": "",
  "license": "CUSTOM",
  "copyright.owner": "Paul Schwandes / 32th System",
  "contributors": [
    {
      "name": "Paul Schwandes (fGeorjje)",
      "email": "paul@schwandes.de",
      "url": "https://schwandes.de"
    },
    {
      "name": "32th-System",
      "email": "intensonat@gmail.com",
      "url": "https://touhouworldcup.com"
    }
  ],
  "standard": {
    "globals": [
      "nodecg"
    ]
  },
  "targets": {
    "graphics": {
      "source": "src/graphics/**/*.html",
      "distDir": "graphics",
      "context": "browser",
      "engines": {
        "browsers": "Chrome 103"
      }
    },
    "dashboard": {
      "source": "src/dashboard/**/*.html",
      "distDir": "dashboard",
      "context": "browser",
      "engines": {
        "browsers": "Chrome 103"
      }
    },
    "extension": {
      "source": "src/extension/**/*.ts",
      "distDir": "extension",
      "context": "node",
      "outputFormat": "commonjs",
      "scopeHoist": false,
      "optimize": false,
      "engines": {
        "node": "= 20"
      }
    }
  },
  "@parcel/bundler-default": {
    "minBundles": 10000,
    "minBundleSize": 3000,
    "maxParallelRequests": 20
  },
  "scripts": {
    "autofix": "npx ts-standard src/graphics/**/*.ts src/dashboard/**/*.ts src/shared/**/*.ts --fix && npx ts-standard src/extension/**/*.ts --project \"src/extension/tsconfig.json\" --fix",
    "clean": "trash .parcel-cache graphics dashboard extension shared",
    "build": "parcel build",
    "deploy": "npx copyfiles \"dashboard/**/*\" \"graphics/**/*\" \"extension/**/*\" \"\\\\touhouworldcup.com\\george\\twc-2025-nodecg\\bundles\\twc-2025"
  },
  "nodecg": {
    "compatibleRange": "^2.0.0",
    "dashboardPanels": [
      {
        "name": "text-control",
        "title": "Text Control",
        "width": 6,
        "file": "text-control.html"
      },
      {
        "name": "admin-buttons",
        "title": "Admin Buttons",
        "width": 3,
        "file": "admin-buttons.html"
      }
    ],
    "graphics": [
      {
        "file": "game.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      },
      {
        "file": "card.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      },
      {
        "file": "results.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      },
      {
        "file": "obs-controller.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      }
    ],
    "assetCategories": [
      {
        "name": "artwork",
        "title": "Artworks",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      }
    ]
  },
  "devDependencies": {
    "@parcel/optimizer-data-url": "^2.14.4",
    "@parcel/transformer-inline-string": "^2.14.4",
    "@types/textfit": "^2.4.5",
    "copyfiles": "^2.4.1",
    "nodecg": "^2.5.3",
    "nodecg-speedcontrol": "github:speedcontrol/nodecg-speedcontrol",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.14.4",
    "trash-cli": "^6.0.0",
    "ts-standard": "^12.0.2"
  },
  "dependencies": {
    "nocodb-sdk": "^0.263.1",
    "obs-websocket-js": "^5.0.6",
    "speedcontrol-util": "^0.6.1",
    "textfit": "^2.4.0"
  }
}
